@model Chess.Web.Models.Game.GameModel
@{
    // TODO - make these mappings in the view model!
    int squaretype = 0;
}
<div class="row">
    <div class="col-md-12">
        <div class="board">
            @foreach (var row in Model.Game.Board.Squares)
            {
                squaretype = 1 - squaretype;

                <div class="board-row">
                    @foreach (var square in row)
                    {
                        squaretype = 1 - squaretype;
                        <span class="board-square board-square-@squaretype">@square.Color.ToString() @square.PieceType</span>
                    }
                    <div class="board-row-clear"></div>
                </div>
            }
        </div>
    </div>
</div>
